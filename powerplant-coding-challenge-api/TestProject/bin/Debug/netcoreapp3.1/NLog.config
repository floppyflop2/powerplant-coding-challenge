<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" autoReload="true"
      internalLogLevel="Trace" internalLogFile="C:\Projects\powerplant-coding-challenge\powerplant-coding-challenge-api\powerplant-coding-challenge-api\Log\InnerLog.txt">
  <extensions>
    <add assembly="NLog.Extended" />
  </extensions>

  <targets>
    <target name="logfile" xsi:type="File" fileName="C:/Projects/powerplant-coding-challenge/powerplant-coding-challenge-api/powerplant-coding-challenge-api/Log/${shortdate}_log.txt"
            layout="${longdate} ${level:uppercase=true} ${message}"/>
  </targets>

  <rules>
    <logger name="*" minlevel="Debug" writeTo="logfile" />
  </rules>
</nlog>
